# Production Environment Variables Template
# Copy this file and update with actual production values
# NEVER commit production secrets to version control

NODE_ENV=production
VITE_APP_NAME=CeybytePOS
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=http://127.0.0.1:8000

# Production API
API_HOST=127.0.0.1
API_PORT=8000

# Production Database
DATABASE_URL=sqlite:///./ceybyte_pos.db
DATABASE_ECHO=false

# Production Security - CHANGE THESE VALUES
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION
JWT_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Production Settings
DEBUG=false
LOG_LEVEL=INFO
ENABLE_CORS=false

# Production Business Configuration
BUSINESS_NAME=Your Business Name
BUSINESS_ADDRESS=Your Business Address
BUSINESS_PHONE=Your Phone Number
BUSINESS_EMAIL=your@email.com
DEFAULT_CURRENCY=LKR
DEFAULT_LANGUAGE=en

# Production Features
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
MAX_BACKUP_FILES=100
ENABLE_UPS_MONITORING=true